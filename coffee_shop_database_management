CREATE TABLE drinks (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL,
    price DECIMAL(6,2) NOT NULL
);

CREATE TABLE desserts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL,
    price DECIMAL(6,2) NOT NULL
);

CREATE TABLE customers (
    id INT AUTO_INCREMENT PRIMARY KEY,
    first_name VARCHAR(50) NOT NULL,
    last_name VARCHAR(50) NOT NULL,
    email VARCHAR(100) UNIQUE,
    phone VARCHAR(20)
);

CREATE TABLE bonus_cards (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_id INT UNIQUE,
    drinks_count INT DEFAULT 0,
    free_drinks INT DEFAULT 0,
    favorite_drink_id INT,
    favorite_dessert_id INT,
    FOREIGN KEY (customer_id) REFERENCES customers(id),
    FOREIGN KEY (favorite_drink_id) REFERENCES drinks(id),
    FOREIGN KEY (favorite_dessert_id) REFERENCES desserts(id)
);

CREATE TABLE orders (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_id INT NOT NULL,
    order_date DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (customer_id) REFERENCES customers(id)
);

CREATE TABLE order_drinks (
    order_id INT,
    drink_id INT,
    quantity INT DEFAULT 1,
    is_free BOOLEAN DEFAULT FALSE,
    PRIMARY KEY (order_id, drink_id),
